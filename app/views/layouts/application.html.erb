<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand"><%= link_to 'Pick Ye Date', products_path %></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%= link_to 'Home', products_path %></li>
      <li><%= link_to 'New Product', new_product_path %></li>
      <li><%= link_to 'Check out', cart_path(session[:cart_id]) %></li>
      <% if current_user %>
      <li><%= link_to('Log Out', destroy_user_session_path, :method => :delete) %></li>
      <li><%= link_to('Change Password', edit_user_registration_path) %></li>
      <li>Logged in as <%= current_user.username  %></li>
      <% else %>
      <li><%= link_to('Sign Up', new_user_registration_path) %></li>
      <li><%= link_to('Login', new_user_session_path) %></li>
      
      <% end %>
    </ul>
  </div>
</nav>
  </head>

  <body>
    <div class="container">
     <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    
  </body>
</html>