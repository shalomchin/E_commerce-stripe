<p id="notice"><%= notice %></p>

<div class="container-fluid"><div>
<h1>Pick your Date</h1>
<h3> Lovely ladies to choose from everyday. Are you single and looking for LOVE? It's right in front of you. A click away. </h3>
<%= link_to 'New Product', new_product_path %>
<div class="row">
  <% @products.each_with_index do |product, index| %>
    <div class="col-sm-4 col-md-4">
      <div class="thumbnail">
        <span id="chicks-<%= index %>"></span>
        <div class="caption">
          <h3><%= product.name %></h3>
          <p><%= product.description.truncate(100) %></p>
          <%= number_to_currency product.price %> SGD/date <br>
          <%= product.stock %> dates left
          <p><%= link_to "Book your date", product_path(product), class: "btn btn-primary" %>
      <!--     <a href="#" class="btn btn-primary" role="button">Book your date</a>  -->

        </div>
      </div>
    </div>
<% end %>
</div>
</div>


<%= paginate(@products) %>
</div>