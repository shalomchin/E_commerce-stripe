
<table class="table">
  
    <tr>
      <th> Name </th>
      <th> Quantity </th>
      <th> Price </th>
      <th> Reservation </th>
      <th> Subtotal </th>
    </tr>
    <% @cart.line_items.each do | line_item | %>
      <tr>
        <td><%= line_item.product.name %> </td>
        <td><%= line_item.quantity %> </td>
        <td><%= line_item.product.price %> </td>
        <td><%= line_item.reservation %> </td>
        <td><%= line_item.subtotal %> </td>
        <td><%= link_to 'Remove', line_item_path(line_item), method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>  
     <% end %> 
      <tr>
       <td></td>
       <td></td>
       <td> Total Price </td>
       <td><strong><%= @cart.total_price %></strong></td>
        
</table>    

<%= link_to 'Back', products_path %>

<%= link_to 'Check Out', new_cart_payment_path(@cart) %>


